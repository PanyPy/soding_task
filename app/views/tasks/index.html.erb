<p id="notice"><%= notice %></p>


<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Tasks List</h3>
  </div>
  <div class="panel-body">


    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, task,{ :class=>"btn btn-primary btn-circle btn-sm"} %>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_task_path(task),{ :class=>"btn btn-success btn-circle btn-sm"} %>
            <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe,task,{ :class=>"btn btn-danger btn-circle btn-sm", method: :delete, data: { confirm: 'Are you sure?' }} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to '<i class="fa fa-plus"> New Task</i>'.html_safe, new_task_path, {:class => 'btn btn-success'} %>

  </div>
</div>

